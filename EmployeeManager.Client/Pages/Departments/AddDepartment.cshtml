@page
@model EmployeeManager.Client.Pages.Departments.AddDepartmentModel
@{
    ViewData["Title"] = "Add Department";
}

<h2>Add Department</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="DepartmentName">Department Name</label>
        <input asp-for="DepartmentName" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>

<a class="btn btn-secondary" asp-page="/Departments/Index">Back to Departments</a>
