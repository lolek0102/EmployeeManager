@page "{id:int}"
@model EmployeeManager.Client.Pages.Employees.EditEmployeeModel
@{
    ViewData["Title"] = "Edit Employee";
}

<h2>Edit Employee</h2>

@if (Model.Employee != null)
{
    <form method="post">
        <input type="hidden" asp-for="Employee.Id" />
        <div class="form-group">
            <label asp-for="Employee.FirstName">First Name</label>
            <input asp-for="Employee.FirstName" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Employee.LastName">Last Name</label>
            <input asp-for="Employee.LastName" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Employee.DepartmentId">Department</label>
            <select asp-for="Employee.DepartmentId" class="form-control" asp-items="Model.DepartmentList">
                <option value="">-- Select Department --</option>
            </select>
        </div>
        <div class="form-group">
            <label asp-for="Employee.Street">Street</label>
            <input asp-for="Employee.Street" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Employee.City">City</label>
            <input asp-for="Employee.City" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Employee.State">State</label>
            <input asp-for="Employee.State" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    </form>
}
else
{
    <p>Employee not found.</p>
}

<a class="btn btn-secondary" asp-page="/Employees/Index">Back to Employees</a>
